{
  "dependencies": {
    "graphql-request": "^1.8.2",
    "jsonwebtoken": "^8.4.0",
    "restify": "^7.2.3",
    "restify-cors-middleware": "^1.1.1",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-plugin-fp": "^2.3.0",
    "nodemon": "^1.18.6"
  },
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon index.js"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "fp/no-mutation": [
        "error",
        {
          "commonjs": true
        }
      ],
      "no-console": 0,
      "fp/no-unused-expression": 0,
      "fp/no-throw": 0,
      "fp/no-nil": 0
    },
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 9
    }
  }
}
